<?xml version="1.0"?>
<!-- root -->
<settings>
    <!--  short description of the widget -->
	<about>Group chat</about>
    <!-- version of widget-->
	<version>1.0</version>
    <!-- link to website -->
	<link>none</link>
    <!-- name of author -->
	<author>Martin lindberg</author>
    <!-- icon to widget relative to main widget folder (can be left empty and a generic icon will be loaded) -->
	<icon>apechat-icon.png</icon>
    <!-- title of widget; will be placed under icon (can be left empty) -->
    <icon_title>Group chat</icon_title>
    <!-- namespace of widget (namespace = javascript object) -->
    <widget_object>apechatWidget</widget_object>
    <!--
        list of files to be loaded relative to main folder of widgets
        (theese files will be loaded upon project start)
        
        valid types are; javascript, css
    -->
	<load>
        <file type="javascript">js/apechat.js</file>
		<file type="css">css/style.css</file>
        <file type="javascript">Chat/mootools/mootools-core.js</file>
        <file type="javascript">Chat/mootools/MooTools.js</file>
        <file type="javascript">Chat/config.js</file>
        <file type="javascript">Chat/demo.js</file>
        <file type="css">Chat/demo.css</file>
    </load>
</settings>